# Dekr AI Assistant Environment Variables
# Copy this file to .env and fill in your actual values

# Flask Configuration
SESSION_SECRET=your-secret-key-here
FLASK_ENV=development
FLASK_DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/dekr_ai_db
PGHOST=localhost
PGPORT=5432
PGDATABASE=dekr_ai_db
PGUSER=username
PGPASSWORD=password

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# Financial Data APIs
POLYGON_API_KEY=your-polygon-api-key-here
MARKETAUX_API_KEY=your-marketaux-api-key-here

# Application Settings
PORT=5000
HOST=0.0.0.0

# Security Settings
CORS_ORIGINS=*
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=dekr_ai_assistant.log

# Feature Flags
ENABLE_VOICE_FEATURES=false
ENABLE_ANALYTICS=true
ENABLE_CACHING=true

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@dekr.ai

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-here
WEBHOOK_URL=https://your-app.com/webhooks

# Analytics Configuration
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token-here

# Storage Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Cache Configuration
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://localhost:6379/2
CACHE_DEFAULT_TIMEOUT=300

# Rate Limiting Configuration
RATELIMIT_STORAGE_URL=redis://localhost:6379/3
RATELIMIT_HEADERS_ENABLED=true

# Development Settings
DEBUG_TOOLBAR_ENABLED=true
PROFILER_ENABLED=false

# Production Settings (set these in production)
SSL_REDIRECT=false
FORCE_HTTPS=false
